@import '/common/css/font.wxss';
.header{
  width: 100%;
  height: 298rpx;
  background: #7691fa;
  border-radius: 0 0 20rpx 20rpx;
  padding: 22rpx 24rpx 0;
  position: relative;
}
.pictures{
  margin: 0 auto;
  width: 201rpx;
  color: #bbc8fd;
  font-size: 18rpx;
  padding-right: 24rpx;
}
.pictures text:nth-child(1){
  margin-left: 0;
}
.pictures text{
  display: inline-block;
  margin-left: 18rpx;
}
.nav-list {
  display: flex;
  height: 133rpx;
  padding-top: 34rpx;
  width: 702rpx;
}
.nav-list navigator {
  margin: auto;
  flex: 1;
  text-align: center;
}
.nav-list image {
  width: 48rpx;
  height: 46rpx;
}
.nav-list text {
  display: block;
  line-height: 67rpx;
  font-size: 24rpx;
  color: #fff;
}
.getPrize{
  padding: 2rpx 30rpx 0 26rpx;
  background: #fff;
  position: absolute;
  left: 24rpx;
  top: 228rpx;
  width: 702rpx;
  box-sizing: border-box;
  border-radius: 8rpx;
}
.getPrize .hasStudent{
  font-size: 25rpx;
  color: #777777;
  line-height: 69rpx;
  border-bottom: 1rpx solid #e5e5e5;
}
.getPrize .disStudent{
  font-size: 26rpx;
  color: #000;
  line-height: 77rpx;
  padding-top: 3rpx;
}
.message{
  width: 360rpx;
  height: 80rpx;
  background: #383939;
  margin: 81rpx auto 20rpx;
  border-radius: 6rpx;
  padding: 8rpx 9rpx;
  border: 1rpx solid #262626;
  box-sizing: border-box;
}
.message image{
  width: 62rpx;
  height: 62rpx;
  border-radius: 6rpx;
}
.message .txt{
  color: #fff;
  font-size: 26rpx;
  margin-left: 32rpx;
}
.message::after{
  font-weight: bold;
  color: #121313;
  padding-left: 85rpx;
  position: relative;
  bottom: 18rpx;
}
.message text{
  position: relative;
  bottom: 20rpx;
}
.person{
  padding: 32rpx 24rpx 0 21rpx;
  background: #fff;
}
.person-avatar{
  float: left;
  width: 70rpx;
  height: 70rpx;
  margin-right: 20rpx;
  margin-top: 7rpx;
}
.person-avatar image{
  width: 100%;
  height: 100%;
}
.person-info{
  width: 185rpx;
  float: left;
}
.person-info .name{
  font-size: 30rpx;
  color: #000;
  line-height: 42rpx;
}
.operation{
  float: right;
  width: 148rpx;
  margin-right: 32rpx;
  font-size: 24rpx;
  margin-top: 12rpx;
}
.operation image{
  width: 29rpx;
  height: 30rpx;
  position: relative;
  top: 5rpx;
  right: 6rpx;
}
.person-info .time{
  font-size: 20rpx;
  color: #999;
  display: block;
}
.operation .num{
  color: #fa6464;
  margin-right: 36rpx;
  font-size: 23rpx;
}
.operation .del{
  color: #576b95;
}
.con-txt{
  line-height: 40rpx;
  color: #000;
  font-size: 31rpx;
}
.con-txt-outer{
  padding-top: 30rpx;
  padding-left: 90rpx;
}
.img-list{
  padding-top: 24rpx;
}
.img-list image{
  display: block;
  float: left;
  width: 190rpx;
  height: 190rpx;
  margin-right: 6rpx;
  background: #94969c;
  border-radius: 10rpx;
}
.operation-btns view{
  float: left;
  color: #737373;
  font-size: 23rpx;
  line-height: 90rpx;
}
.operation-btns image{
  width: 30rpx;
  height: 30rpx;
}
.operation-btns view:nth-child(2){
  margin-left: 115rpx;
}
.operation-btns view:nth-child(3){
  margin-left: 114rpx;
}
.operation-btns view:nth-child(4){
  margin-left: 85rpx;
}
.operation-btns view text{
  margin-left: 8rpx;
  position: relative;
  bottom: 6rpx;
}
.input-text .txt{
  float: left;
  width: 514rpx;
  height: 73rpx;
  border-radius: 6rpx;
  background: #f5f5f5;
  color: #c9c9c9;
  padding: 0 23rpx;
  line-height: 73rpx;
  box-sizing: border-box;
  font-size: 22rpx;
}
.input-text .sub{
  float: left;
  width: 87rpx;
  background: #f5f5f5;
  color: #c9c9c9;
  text-align: center;
  height: 73rpx;
  line-height: 73rpx;
  margin-left: 10rpx;
  border-radius: 6rpx;
  font-size: 22rpx;
}
.camera{
  width: 100rpx;
  height: 100rpx;
  position: fixed;
  right: 22rpx;
  bottom: 62rpx;
}
.camera image{
  width: 100%;
  height: 100%;
}